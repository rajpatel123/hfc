<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hfc.com.hfc">


<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>

        <!--Splash Activity Theme-->
        <activity android:name=".activity.PaymentRequestActivity"
            android:windowSoftInputMode="stateHidden">


        </activity>
        <!--Splash Activity Theme-->
        <activity android:name=".activity.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme">

        </activity>


        <!--Splash Activity Theme-->
        <activity android:name=".activity.AddUserActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme">
        </activity>

        <!--AccountDetailsActivity  Theme-->
        <activity android:name=".activity.AccountDetailsActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <!--AccountDetailsActivity  Theme-->
        <activity android:name=".activity.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme">
        </activity>
<!--Full Screen Theme-->
        <activity android:name=".activity.SplashActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>